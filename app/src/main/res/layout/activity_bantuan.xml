<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_informasi_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="codes.vulnwalker.bonuspulsa.fragment.bantuan.bantuan">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:id="@+id/info.detail.scroll"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/titleBantuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tonton Video"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/deskripsiBantuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
