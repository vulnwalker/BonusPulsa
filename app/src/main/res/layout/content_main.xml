<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:context="codes.vulnwalker.bonuspulsa.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_centerInParent="true" />
    <ScrollView
        android:id="@+id/parentMainMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/playVideoAds"
                    android:layout_width="289dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded"
                    android:text="TONTON VIDEO"
                    android:theme="@style/Theme.AppCompat.NoActionBar" />
                <Button
                    android:id="@+id/playVideoAds2"
                    android:layout_width="289dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="TONTON VIDEO 2"
                    android:theme="@style/Theme.AppCompat.NoActionBar"
                    android:background="@drawable/rounded"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_vertical|center_horizontal"



                    />
                <Button
                    android:id="@+id/playVideoAds3"
                    android:layout_width="289dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="TONTON VIDEO 3"
                    android:theme="@style/Theme.AppCompat.NoActionBar"
                    android:background="@drawable/rounded"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_vertical|center_horizontal"


                    />
                <Button
                    android:id="@+id/clickAds"
                    android:layout_width="289dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/playVideoAds3"
                    android:layout_centerHorizontal="true"
                    android:text="BONUS IKLAN"
                    android:theme="@style/Theme.AppCompat.NoActionBar"
                    android:background="@drawable/rounded"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_vertical|center_horizontal"


                    />
                <Button
                    android:id="@+id/clickAds2"
                    android:layout_width="289dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/playVideoAds3"
                    android:layout_centerHorizontal="true"
                    android:text="BONUS IKLAN 2"
                    android:theme="@style/Theme.AppCompat.NoActionBar"
                    android:background="@drawable/rounded"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_vertical|center_horizontal"


                    />
                <Button
                    android:id="@+id/absen"
                    android:layout_width="289dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/playVideoAds"
                    android:layout_centerHorizontal="true"
                    android:text="ABSEN HARIAN"
                    android:theme="@style/Theme.AppCompat.NoActionBar"
                    android:background="@drawable/rounded"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_vertical|center_horizontal"


                    />
            </LinearLayout>

        </RelativeLayout>


    </ScrollView>



</android.support.constraint.ConstraintLayout>